<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>


        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="post_code" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <field name="best_offer_price" />
                    <field name="expected_price" />
                    <field name="state" widget="badge" />
                </tree>
            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property guys">
                    <header>
                        <button name="action_sold" type="object" string="Sold" class="btn btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="real_estate_ads.action_property_offer" type="action">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" widget="char_emojis" placeholder="Masukkan nama"/>
                            <field name="tags_id" placeholder="Property Tags" widget="many2many_tags"/>
                            <group>
                                <field name="state"/>
                                <field name="type_id"/>
                                <field name="post_code"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer_price"/>
                                <field name="selling_price"/>
                            </group>

                            <sheet>
                                <notebook>
                                    <page string="Description">
                                        <group>
                                            <field name="description" />
                                            <field name="bedrooms"/>
                                            <field name="living_area" />
                                            <field name="facades" />
                                            <field name="garage" widget="boolean_toggle"/>
                                            <field name="garden" widget="boolean_toggle" />
                                            <field name="garden_area" invisible="garden==False"/>
                                            <field name="garden_orientation" invisible="garden==False" widget="selection_badge"/>
                                            <field name="total_area" />
                                        </group>
                                    </page>
                                    <page string="Offers">
                                        <field name="offer_ids" >
                                                <tree editable="bottom">
                                                    <field name="price"/>
                                                    <field name="partner_id"/>
                                                    <field name="creation_date"/>
                                                    <field name="validity"/>
                                                    <field name="deadline" widget="remaining_days"/>
                                                    <field name="status" nolabel="1"/>
                                                </tree>
                                            </field>
                                    </page>
                                    <page string="Other info">
                                        <group>
                                            <field name="sales_id" widget="many2one_avatar"/>
                                            <field name="buyer_id" />
                                            <field name="buyer_phone" widget="phone" />
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="estate_property_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>

    </data>
</odoo>