<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>


        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="post_code" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <field name="best_offer_price" />
                    <field name="expected_price" />
                    <field name="state" widget="badge" />
                </tree>
            </field>
        </record>

        <record id="estate_property_kanban_view" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" on_create="quick_create" quick_create_view="real_estate_ads.quick_form_view">
                    <field name="name" />
                    <field name="state" />
                    <field name="post_code" />
                    <field name="buyer_id" />
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_title">
                                        <field name="name" />
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <field name="tags_id" widget="many2many_tags" options="{'color_field':'color'}"/>
                                    </div>

                                    <div class="o_kanban_record_bottom">
                                        <div class="o_kanban_record_bottom_left">
                                            <field name="offer_count" /> Offers
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>

        <record id="quick_form_view" model="ir.ui.view" >
            <field name="name">estate.property.quick_form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name" placeholder="Property Name"/>
                    <field name="tags_id" widget="many2many_tags" placeholder="Tags"/>
                    <field name="post_code" placeholder="Post Code"/>
                </form>
            </field>
        </record>

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="state" />
                    <field name="post_code" />
                    <field name="buyer_id" />
                    <filter string="New" name="sold_state" domain="[('state','=','new')]" />
                    <filter string="Sold" name="sold_state" domain="[('state','=','sold')]" />
                    <separator />
                    <filter string="Received Offer" name="sold_state" domain="[('state','=','received')]" />
                    <filter string="Accepted Offer" name="sold_state" domain="[('state','=','accepted')]" />

                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_status" context="{'group_by': 'state'}" />
                    </group>

                    <!--<searchpanel>
                        <field name="state" icon="fa fa-filter" groupby="group_by_status" limit="0" />
                    </searchpanel>-->
                </search>
            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property guys">
                    <header>
                        <button name="action_sold" type="object" string="Sold" class="btn btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="real_estate_ads.action_property_offer" type="action">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" widget="char_emojis" placeholder="Masukkan nama"/>
                            <field name="tags_id" placeholder="Property Tags" widget="many2many_tags"/>
                            <group>
                                <field name="state"/>
                                <field name="type_id"/>
                                <field name="post_code"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer_price"/>
                                <field name="selling_price"/>
                            </group>

                            <sheet>
                                <notebook>
                                    <page string="Description">
                                        <group>
                                            <field name="description" />
                                            <field name="bedrooms"/>
                                            <field name="living_area" />
                                            <field name="facades" />
                                            <field name="garage" widget="boolean_toggle"/>
                                            <field name="garden" widget="boolean_toggle" />
                                            <field name="garden_area" invisible="garden==False"/>
                                            <field name="garden_orientation" invisible="garden==False" widget="selection_badge"/>
                                            <field name="total_area" />
                                        </group>
                                    </page>
                                    <page string="Offers">
                                        <field name="offer_ids" >
                                                <tree editable="bottom">
                                                    <field name="price"/>
                                                    <field name="partner_id"/>
                                                    <field name="creation_date"/>
                                                    <field name="validity"/>
                                                    <field name="deadline" widget="remaining_days"/>
                                                    <field name="status" nolabel="1"/>
                                                </tree>
                                            </field>
                                    </page>
                                    <page string="Other info">
                                        <group>
                                            <field name="sales_id" widget="many2one_avatar"/>
                                            <field name="buyer_id" />
                                            <field name="buyer_phone" widget="phone" />
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="estate_property_kanban_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>

    </data>
</odoo>